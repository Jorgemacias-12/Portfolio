---
import type { Experience as Props } from "@/types";
import { Briefcase } from "lucide-astro";
import Skill from "./Skill.astro";

const { company, period, responsibilities, role, technologies } = Astro.props;
---

<article
  class="flex flex-col gap-4 bg-gray-100 shadow-md dark:bg-dark-800 p-2 rounded-lg transition-colors duration-200 w-full"
>
  <header class="flex gap-4 items-center">
    <span class="w-12 h-12 flex items-center justify-center">
      <Briefcase size={32} />
    </span>

    <section>
      <h3 class="text-xl font-bold">{role}</h3>

      <p class="text-sm text-accent-800 dark:text-accent-500">{company}</p>
      <p class="text-sm text-gray-500 dark:text-gray-100/60">{period}</p>
    </section>
  </header>
  <main>
    <ul
      class="inline-flex flex-col list-inside list-disc marker:text-accent-800 dark:marker:text-accent-500 gap-2"
    >
      {
        responsibilities.map((el) => {
          return <li class="text-sm pl-2">{el}</li>;
        })
      }
    </ul>
  </main>
  <footer class="flex flex-wrap gap-2">
    {
      technologies.map((t) => {
        return <Skill type="pill" {...t} />;
      })
    }
  </footer>
</article>
