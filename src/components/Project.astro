---
import type { Locale, Project as Props } from "@/types";
import { Carrousel } from "./Carrousel";
import Skill from "./Skill.astro";
import { ExternalLink } from "@lucide/astro";

const locale = Astro.currentLocale as Locale;

const { description, images, link, name, tags } = Astro.props;
---

<article
  class="flex flex-col gap-2 bg-gray-100 shadow-md dark:bg-dark-800 p-2 rounded-lg transition-colors duration-200"
>
  <header class="flex flex-col gap-2">
    <Carrousel locale={locale} images={images} client:only />
    <h3
      class="text-2xl text-balance font-semibold text-accent-600 dark:text-accent-500"
    >
      {name}
    </h3>
    <p class="text-sm text-gray-700 dark:text-gray-100/50">{description}</p>
  </header>

  <main>
    <p class="text-sm text-gray-700 dark:text-gray-100/50"></p>

    <section class="flex flex-wrap gap-2 items-center">
      {
        tags.map((props) => {
          return <Skill {...props} />;
        })
      }
    </section>
  </main>

  <footer class="flex">
    <a
      target="_blank"
      class="flex items-center gap-2 text-sm text-center mx-auto"
      href={link.url}
    >
      <ExternalLink size={20} />
      {link.label}
    </a>
  </footer>
</article>
