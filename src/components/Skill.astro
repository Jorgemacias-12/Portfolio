---
import type { Skill as Props, SkillVariant } from "@/types";
import { clsx } from "clsx";

const { icon, name, color, type = "card" } = Astro.props;

const variants: Record<SkillVariant, string> = {
  card: "bg-gray-100 dark:bg-dark-800",
  pill: `bg-${color}/10`,
};
---

<article class={clsx("p-2 rounded-md flex items-center gap-2", variants[type])}>
  <i
    class={clsx(
      "text-xl flex items-center justify-center",
      `devicon-${icon}-plain`,
      `text-${color}-500`
    )}></i>
  <span class="text-sm font-medium text-black dark:text-white transition-all"
    >{name}</span
  >
</article>
